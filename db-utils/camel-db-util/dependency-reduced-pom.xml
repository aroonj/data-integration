<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>db-util</artifactId>
    <groupId>com.servnize</groupId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>camel-db-util</artifactId>
  <name>A Camel Spring Launcher</name>
  <description>Camel String for Database Integration</description>
  <url>http://www.servnize.com</url>
  <build>
    <defaultGoal>install</defaultGoal>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.0.1</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.camel</groupId>
        <artifactId>camel-maven-plugin</artifactId>
        <version>2.18.1</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>com.servnize.camel.db.util.CamelApplicationCtl</Main-Class>
                    <Build-Number>1</Build-Number>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>RunApplication</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.5.0</version>
            <executions>
              <execution>
                <goals>
                  <goal>java</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <mainClass>com.servnize.camel.db.util.CamelApplicationCtl</mainClass>
              <arguments>
                <argument>-f</argument>
                <argument>${project.basedir}/src/test/resources/etc/application.conf</argument>
                <argument>-r</argument>
              </arguments>
              <systemProperties>
                <systemProperty>
                  <key>log4j.configurationFile</key>
                  <value>${project.basedir}/src/test/resources/etc/log4j2.properties</value>
                </systemProperty>
                <systemProperty>
                  <key>log.dir</key>
                  <value>/${project.basedir}/logs</value>
                </systemProperty>
                <systemProperty>
                  <key>conf.dir</key>
                  <value>${project.basedir}/src/test/resources/etc</value>
                </systemProperty>
                <systemProperty>
                  <key>ext.dir</key>
                  <value>${project.basedir}/ext.lib</value>
                </systemProperty>
              </systemProperties>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>StopApplication</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.5.0</version>
            <executions>
              <execution>
                <goals>
                  <goal>java</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <mainClass>com.servnize.camel.db.util.CamelApplicationCtl</mainClass>
              <arguments>
                <argument>-f</argument>
                <argument>${project.basedir}/src/test/resources/etc/application.conf</argument>
                <argument>-s</argument>
              </arguments>
              <systemProperties>
                <systemProperty>
                  <key>configurationFile</key>
                  <value>${project.basedir}/src/test/resources/etc/log4j2.properties</value>
                </systemProperty>
                <systemProperty>
                  <key>log.dir</key>
                  <value>/${project.basedir}/logs</value>
                </systemProperty>
                <systemProperty>
                  <key>conf.dir</key>
                  <value>${project.basedir}/src/test/resources/etc</value>
                </systemProperty>
                <systemProperty>
                  <key>ext.dir</key>
                  <value>${project.basedir}/ext.lib</value>
                </systemProperty>
              </systemProperties>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-test-spring</artifactId>
      <version>2.18.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>camel-test</artifactId>
          <groupId>org.apache.camel</groupId>
        </exclusion>
        <exclusion>
          <artifactId>spring-test</artifactId>
          <groupId>org.springframework</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.camel</groupId>
        <artifactId>camel-parent</artifactId>
        <version>2.18.1</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

